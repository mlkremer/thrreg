citHeader("To cite thrreg in publications use:")

citEntry(entry = "Manual",
  title        = "thrreg: Threshold Regression Model",
  author       = personList(as.person("Marcel Kremer")),
  year         = "2020",
  note         = "R package version 0.1.1",
  url          = "https://github.com/mlkremer/thrreg",

  textVersion  =
  paste("Marcel Kremer (2020).",
        "thrreg: Threshold Regression Model.",
        "R package version 0.1.1.",
        "https://github.com/mlkremer/thrreg")
)
